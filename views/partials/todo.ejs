<div class='todo'>
  <div class='title-status' data-id='<%= todo.id %>'>
    <h3><%= todo.title %></h3>
    <% if (todo.completed) { %>
      <span class='done'>Done</span>
    <% } else { %>
      <span class='not-done'>To Do</span>
    <% } %>
  </div>
  <div class='content'>
    <p><%= todo.description %></p>
  </div>
  <div class='meta'>
    <div class='category'>
      <h4>Category</h4>
    </div>
    <div class='delete-contain'>
      <form method='POST' action='/todo/<%= todo.id %>?_method=DELETE'>
        <input type='submit' value='Delete' />
      </form>
    </div>
    <div class='edit-contain'>
      <span class='edit'>Edit</span>
    </div>
  </div>

</div>